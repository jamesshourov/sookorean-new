{
  "name": "imdhemy/google-play-billing",
  "description": "Google Play Billing",
  "license": "MIT",
  "authors": [
    {
      "name": "imdhemy",
      "email": "imdhemy@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-json": "*",
    "nesbot/carbon": "^2.41",
    "guzzlehttp/guzzle": "^6.0|^7.0",
    "google/auth": "^1.15"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/var-dumper": "^5.3",
    "vimeo/psalm": "^4.12",
    "friendsofphp/php-cs-fixer": "^3.2",
    "fakerphp/faker": "^1.16"
  },
  "autoload": {
    "psr-4": {
      "Imdhemy\\GooglePlay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm",
    "psalm-info": "vendor/bin/psalm --show-info=true --no-cache",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "check-style": "vendor/bin/php-cs-fixer fix --dry-run",
    "test": "vendor/bin/phpunit --testdox"
  },
  "config": {
    "platform": {
      "php": "7.3"
    }
  }
}
